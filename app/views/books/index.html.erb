<div>
<%=   flash[:notice]  %>
</div>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <body>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
    </tr>
    <% end %>
  </body>
</table>
<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <div>
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
  <div>
  <h4>Body</h4>
  <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>

<% end %>
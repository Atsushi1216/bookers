<h1>Books</h1>
<tr>
  <th><strong>Title</strong></th>
  <th><strong>Body</strong></th>
  <th colspan="3"></th>
</tr>

<h1>New book</h1>
<%= form_with model:@blog, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>

<% end %>